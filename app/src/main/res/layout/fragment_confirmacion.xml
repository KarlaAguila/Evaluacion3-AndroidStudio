<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".ConfirmacionFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="90dp">

        <!-- Título de confirmación -->
        <TextView
            android:id="@+id/confirmationTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¡Registro Exitoso!"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:layout_marginBottom="40dp" />

        <!-- Mensaje de confirmación -->
        <TextView
            android:id="@+id/confirmationMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="El registro del cliente ha sido exitoso."
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_gravity="center"
            android:layout_marginBottom="16dp" />

        <!-- Botón para volver al inicio -->
        <Button
            android:id="@+id/backToHomeButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Volver al Inicio"
            android:layout_gravity="center"
            android:onClick="navigateToHome" />
    </LinearLayout>
</ScrollView>



