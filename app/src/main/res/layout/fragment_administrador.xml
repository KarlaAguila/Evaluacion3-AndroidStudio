<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".AdministradorFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="30dp">

        <!-- Título de la pantalla de administrador -->
        <TextView
            android:id="@+id/adminTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Panel de Administración"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textStyle="bold"
            android:layout_marginBottom="24dp" />

        <!-- Imagen destacada o logo -->
        <ImageView
            android:id="@+id/adminImage"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginBottom="24dp"
            android:scaleType="centerCrop"
            android:src="@drawable/admi" />

        <!-- Información sobre usuarios -->
        <TextView
            android:id="@+id/usersInfoTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Usuarios Activos:"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/usersInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total de usuarios activos: 123"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_marginBottom="16dp" />

        <!-- Información sobre informes -->
        <TextView
            android:id="@+id/reportsInfoTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Últimos Informes:"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/reportsInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Informe de ventas: $10,000\nInforme de actividad: 85% de usuarios activos"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_marginBottom="16dp" />

        <!-- Información sobre ajustes o configuración -->
        <TextView
            android:id="@+id/settingsInfoTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Configuraciones Recientes:"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/settingsInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Última actualización: 20 de Mayo, 2024\nNuevas características añadidas."
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_marginBottom="24dp" />

        <!-- Botón para cerrar sesión -->



    </LinearLayout>
</ScrollView>


